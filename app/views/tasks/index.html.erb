<h1> My tasks </h1>

<ul>
  <% @tasks.each do |task| %>
    <input type="checkbox" name="task" onclick = "return false" <%= "checked" if task[:completed] == true %> >
    <label>
      <%= link_to task[:title], task_path(task[:id]) %>
    </label>
    <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?"}%>
    <br>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path %>
